    "version": "0.2.0",
    "configurations": [
        {
            "name": "Load Report",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "module": "src.load_data.load_report",
            "console": "integratedTerminal"
        },
        {
            "name": "Search MedDRA",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "module": "src.meddra.search",
            "console": "integratedTerminal"
        },
        {
            "name": "Download FAERS Data",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "module": "src.download_data.faers_downloader",
            "console": "integratedTerminal"
        },
        {
            "name": "Merge Reports",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "module": "src.preprocessing.merge_reports",
            "console": "integratedTerminal",
            "args": ["--quarter", "2024Q1"]
        }
    ]
}